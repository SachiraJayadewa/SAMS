<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250" prefWidth="400" style="-fx-background-color: #f1c40f; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.ijse.cmjd111.student.controller.LoginController">
    <children>
        <Label layoutX="36.0" layoutY="50" prefHeight="18.0" prefWidth="80.0" text="Username:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <TextField fx:id="usernameField" layoutX="150" layoutY="50" />

        <Label layoutX="36.0" layoutY="100" prefHeight="26.0" prefWidth="80.0" text="Password:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="100" />

        <Button layoutX="150" layoutY="150" onAction="#handleLogin" style="-fx-background-color: #2980b9;" text="Login">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>

        <Label fx:id="messageLabel" layoutX="150" layoutY="200" textFill="red" />
    </children>
</AnchorPane>