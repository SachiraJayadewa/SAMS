<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: #2c3e50;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.ijse.cmjd111.student.controller.LoginController">
    <children>
        <Label layoutX="40" layoutY="50" text="Username:"
               style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 16px;" />
        <TextField fx:id="usernameField" layoutX="140" layoutY="45" prefWidth="220" prefHeight="30"
                   style="-fx-background-radius: 6; -fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-padding: 0 10 0 10;" />

        <Label layoutX="40" layoutY="110" text="Password:"
               style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 16px;" />
        <PasswordField fx:id="passwordField" layoutX="140" layoutY="105" prefWidth="220" prefHeight="30"
                       style="-fx-background-radius: 6; -fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-padding: 0 10 0 10;" />

        <Button layoutX="140" layoutY="170" text="Login" onAction="#handleLogin"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8; -fx-cursor: hand;"
                prefWidth="220" prefHeight="35"/>

        <Label fx:id="messageLabel" layoutX="140" layoutY="220" textFill="#e74c3c"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    </children>
</AnchorPane>

