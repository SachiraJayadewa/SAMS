<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="700" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ijse.cmjd111.student.controller.StudentController"
            style="-fx-background-color: #f9f9f9;">

    <children>
        <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
              style="-fx-padding: 20;">

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Name:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <TextField fx:id="nameField" prefWidth="200" promptText="Enter student name"/>

                <Label text="Reg No:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <TextField fx:id="regField" prefWidth="150" promptText="Enter registration number"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Course:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <TextField fx:id="courseField" prefWidth="200" promptText="Enter course name"/>

                <Label text="Contact:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <TextField fx:id="contactField" prefWidth="150" promptText="Enter contact number"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="âž• Add" onAction="#addStudent" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="âœï¸ Update" onAction="#updateStudent" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="ðŸ—‘ Delete" onAction="#deleteStudent" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="ðŸ”„ Clear" onAction="#clearFields" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <TableView fx:id="studentTable" prefHeight="300" style="-fx-border-color: #ccc;">
                <columns>
                    <TableColumn fx:id="indexCol" text="#" prefWidth="50"/>
                    <TableColumn fx:id="nameCol" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="regCol" text="Reg No" prefWidth="150"/>
                    <TableColumn fx:id="courseCol" text="Course" prefWidth="150"/>
                    <TableColumn fx:id="contactCol" text="Contact" prefWidth="150"/>
                </columns>
            </TableView>
            <!-- NEW Back button -->
            <Button text="ðŸ”™ Back to Dashboard"
                    onAction="#goBackToDashboard"
                    style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;"
                    alignment="CENTER_LEFT"
                    prefWidth="200"/>
        </VBox>
    </children>
</AnchorPane>

