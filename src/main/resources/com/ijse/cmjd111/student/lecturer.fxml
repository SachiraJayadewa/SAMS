<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ijse.cmjd111.student.controller.LecturerController"
            style="-fx-background-color: #f9f9f9;">

    <top>
        <Label text="👨‍🏫 Lecturer Management"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20 0 10 0;"/>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <GridPane hgap="15" vgap="10">
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Enter name"/>

                <Label text="Department:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="departmentField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Enter department"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Enter email"/>

                <Label text="Contact:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="contactField" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Enter contact number"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="➕ Add" onAction="#addLecturer"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="✏️ Update" onAction="#updateLecturer"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="🗑 Delete" onAction="#deleteLecturer"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="🔄 Clear" onAction="#clearFields"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <TableView fx:id="lecturerTable" prefHeight="300" style="-fx-border-color: #ccc;">
                <columns>
                    <TableColumn fx:id="nameCol" text="Name" prefWidth="120"/>
                    <TableColumn fx:id="departmentCol" text="Department" prefWidth="100"/>
                    <TableColumn fx:id="emailCol" text="Email" prefWidth="160"/>
                    <TableColumn fx:id="contactCol" text="Contact" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
                <Button text="⬅ Back to Dashboard" onAction="#handleBackToAdmin"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>



